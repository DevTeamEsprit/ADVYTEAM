@model IEnumerable<ADVYTEAM.Presentation.Models.SurveyVM>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.duree)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>

        <th>
           Employee concerned
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.duree)   <b>jours</b>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.employee_Name)
            </td>
            <td>
                @Html.ActionLink("Participer", "Details", new { empid = item.employe_id, manid = item.manager_id, date = item.date }) |
            </td>
        </tr>
    }

</table>