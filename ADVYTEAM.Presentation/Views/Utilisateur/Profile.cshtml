
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_templateLayout.cshtml";
}

 

<br />
<br />
<section class="content">
    <div class="container-fluid">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">


                    <!-- Profile Image -->
                    <div class="card card-primary card-outline">
                        <div class="card-body box-profile">
                            <div class="text-center">
                                <img class="profile-user-img img-fluid img-circle"
                                     src="data:image/png;base64,@ViewBag.user.image"
                                     alt="User profile picture" />
                            </div>

                            <h3 class="profile-username text-center">
                                @ViewBag.user.nom - @ViewBag.user.prenom
                            </h3>



                            <ul class="list-group list-group-unbordered">
                                <li class="list-group-item">
                                    <i class="fa fa-map-marker mr-1"></i><b>Adresse</b>
                                    <a class="pull-right"> @ViewBag.user.adresse </a>
                                </li>
                                <li class="list-group-item">
                                    <i class="fa fa-phone mr-1"></i><b>
                                        Némuro
                                        tel
                                    </b> <a class="pull-right">  @ViewBag.user.tel </a>
                                </li>
                                <li class="list-group-item">
                                    <i class="fa fa-book mr-1"></i><b>Email</b>
                                    <a class="pull-right">  @ViewBag.user.email </a>
                                </li>
                            </ul>
                            <form enctype="multipart/form-data">



                                @*<div class="input-group">
                                        <div class="custom-file">
                                            <p:fileUpload id="imf" value="#{utilisateurbean.file}"
                                                          mode="simple" skinSimple="true" class="custom-file-input" />
                                            <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                                        </div>

                                    </div>*@




                                @*<h:commandLink action="#{utilisateurbean.changerImage}"
                                                   class="btn btn-primary btn-block">
                                        <i class="fal fa-portrait"></i> Photo de profil
                                    </h:commandLink>*@
                            </form>
                        </div>

                    </div>
                    <!-- /.card -->
                    <!-- /.card -->
                    <!-- About Me Box -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Contrat</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <strong><i class="fa fa-book mr-1"></i> Type Contrat</strong>

                            <p class="text-muted"> @ViewBag.user.contrat.typeContrat </p>

                            <hr></hr>

                            <strong>
                                <i class="fa fa-calendar mr-1"></i> Date de
                                debut
                            </strong>

                            <p class="text-muted"> @ViewBag.user.contrat.dateDebut </p>

                            <hr>

                            <strong><i class="fa fa-calendar mr-1"></i> Date de fin</strong>


                            <p class="text-muted"> @ViewBag.user.contrat.dateFin </p>


                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->


                </div>

                <!-- /.col -->
                <div class="col-md-9">
                    <div class="card">

                        @foreach (var p in ViewBag.publications)
                        {
                            <!-- Box Comment -->
                            <div class="card card-widget">
                                <div class="card-header">
                                    <div class="user-block">
                                        <img class="img-circle" src="data:image/jpeg;base64,@p.user.image" alt="User Image">
                                        <span class="username">
                                            <a href="#">@p.user.prenom @p.user.nom .</a>

                                        </span>

                                        <span class="description">
                                            Shared publicly - @p.dateCreation

                                        </span>
                                    </div>
                                    <!-- /.user-block -->
                                     

                                        @*<div class="card-tools">

                                            <a href="@Url.Action("Edit", "Publication", new { id = @p.id })" class="btn btn-tool" data-widget="remove">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", "Publication", new { id = @p.id })" class="btn btn-tool" data-widget="remove" onclick="return confirm('Are you sure you want to delete this item?');">
                                                <i class="fas fa-trash"></i>
                                            </a>


                                        </div>*@
                                     

                                    <!-- /.card-tools -->
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <!-- post text -->
                                    <p>
                                        @p.description
                                    </p>

                                    <!-- Social sharing buttons -->
                                    <button type="button" class="btn btn-default btn-sm"><i class="fa fa-share"></i> Share</button>
                                    <button type="button" class="btn btn-default btn-sm"><i class="fa fa-thumbs-o-up"></i> Like</button>
                                    <span class="float-right text-muted">45 likes - @p.lstComm.Count comments</span>
                                </div>
                                <!-- /.card-body -->
                                <div class="card-footer card-comments">
                                    @foreach (var com in p.lstComm)
                                    {
                                        <div class="card-comment">

                                            <img class="img-circle img-sm" src="data:image/jpeg;base64,@com.user.image" alt="User Image">

                                            <div class="comment-text">
                                                <span class="username">
                                                    @com.user.prenom @com.user.nom

                                                    @if (@ViewBag.user.id == @com.user.id)
                                                    {
                                                        @*<span class="text-muted float-right">
                                                            <a href="@Url.Action("Delete", "Commentaire", new { id = @com.id })" onclick="return confirm('Are you sure you want to delete this item?');">
                                                                <i class="fas fa-trash"></i>
                                                            </a>
                                                        </span>*@
                                                        @*<span class="text-muted float-right">
                                                            <a href="#">
                                                                &nbsp;&nbsp;&nbsp;&nbsp;
                                                                <i class="fas fa-edit"></i>
                                                                &nbsp;&nbsp;

                                                            </a>

                                                        </span>*@
                                                    }
                                                    <span class="text-muted float-right">@com.dateCreation</span>






                                                </span>
                                                @com.description .
                                            </div>
                                        </div>
                                    }
                                </div>
                                <!-- /.card-footer -->
                                @*<div class="card-footer">

                                    <form class="form-horizontal" action="@Url.Action("Create", "Commentaire")" method="get">
                                        <div class="input-group input-group-sm mb-0">
                                            <img class="img-fluid img-circle img-sm" src="data:image/jpeg;base64,@ViewBag.user.image" alt="Alt Text">
                                            <input id="idpub" name="idpub" value="@p.id" style="display: none;">
                                            <input id="description" name="description" class="form-control form-control-sm" placeholder="Response">
                                            <div class="input-group-append">
                                                <button type="submit" class="btn btn-danger">Commenter</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>*@
                                <!-- /.card-footer -->
                            </div>
                            <!-- /.card -->
                        }

                    </div>
                </div>
            </div>
        </div>

    </div>
</section>